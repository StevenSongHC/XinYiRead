<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xinyiread.dao.UserDAO">  
	
    <resultMap type="User" id="userResultMap">
        <id column="uid" property="id" />
        <result column="u_name" property="name" />
        <result column="u_password" property="password" />
        <result column="u_portrait" property="portrait" />
        <result column="u_email" property="email" />
        <result column="u_is_email_show" property="isEmailShow" />
        <result column="u_join_date" property="joinDate" />
        <result column="u_last_login_date" property="lastLoginDate" />
    </resultMap>
    
    <insert id="insert" parameterType="User" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO user(u_name,u_password,u_email,u_is_email_show,u_join_date,u_last_login_date)
        VALUES (#{name},#{password},#{email},#{isEmailShow},#{joinDate},#{lastLoginDate})
    </insert>
    
     <update id="update" parameterType="User">
        UPDATE user SET
            u_name=#{name},
            u_password=#{password},
            u_portrait=#{portrait},
            u_email=#{email},
            u_is_email_show=#{isEmailShow},
            u_join_date=#{joinDate},
            u_last_login_date=#{lastLoginDate}
        WHERE uid=#{id}
    </update>
    
    <select id="getUserList" parameterType="String" resultMap="userResultMap">  
        <![CDATA[
            SELECT * FROM user
        ]]>
    </select>
    
    <select id="getUserByName" parameterType="String" resultMap="userResultMap">
        SELECT * FROM user 
        WHERE u_name=#{username}
    </select>
    
    <select id="getUserByEmail" parameterType="String" resultMap="userResultMap">
        SELECT * FROM user 
        WHERE u_email=#{email}
    </select>
    
    <select id="getAuthorityList" resultType="java.util.Map">
        SELECT user.uid, user.u_name, administrative_member.catid, category.cat_name
		FROM user
		RIGHT JOIN administrative_member ON administrative_member.uid=user.uid
		LEFT JOIN category ON category.catid=administrative_member.catid
		ORDER BY user.uid ASC 
    </select>
    
    <select id="getUserAdministrativeCategoryById" parameterType="java.lang.Long" resultType="java.lang.Integer">
        SELECT catid FROM administrative_member 
        WHERE uid=#{id}
    </select>
    
</mapper>